{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "paths": {
    "src*/": ["./src/*"],
    "@components": ["src/components"]
  },
  "exclude": ["node_modules"]
}
