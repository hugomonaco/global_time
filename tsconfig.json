{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["ES6"],
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop" : true,
  },
  "paths": {
    "src*/": ["./src/*"],
    "@components": ["src/components"]
  },
  "exclude": ["node_modules"]
}